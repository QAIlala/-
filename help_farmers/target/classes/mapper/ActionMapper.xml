<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.help_farmers.mapper.ActionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.help_farmers.model.domain.Action">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="state" property="state" />
        <result column="url" property="url" />
        <result column="p_id" property="pId" />
        <result column="acl_value" property="aclValue" />
        <result column="ban_flag" property="banFlag" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, state, url, p_id, acl_value, ban_flag, del_flag
    </sql>

    <select id="queryAllActions" resultType="com.help_farmers.model.dto.TreeDto">
        select id, p_id as pId, name
        from t_action
        where ban_flag = 0 AND del_flag = 0
    </select>

</mapper>
