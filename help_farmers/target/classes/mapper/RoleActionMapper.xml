<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.help_farmers.mapper.RoleActionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.help_farmers.model.domain.RoleAction">
        <id column="id" property="id" />
        <result column="action_id" property="actionId" />
        <result column="role_id" property="roleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, action_id, role_id
    </sql>

    <select id="queryRoleHasActionsByRoleId" resultType="java.lang.Integer">
        SELECT
            action_id
        FROM
            t_role_action
        WHERE
            role_id = #{roleId}
    </select>

    <select id="findActionsByRoleName" resultType="java.lang.String">
        SELECT DISTINCT
            a.acl_value
        FROM
            t_role_action ra
                LEFT JOIN t_action a ON ra.action_id = a.id
                LEFT JOIN t_role r ON ra.role_id = r.id
        WHERE
            r.ban_flag = 0
          AND r.del_flag = 0
          AND r.NAME = #{roleName}
    </select>

</mapper>
